rules_version = '2';

// Firebase Storage Security Rules - Production Version
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() 
        && (request.auth.token.admin == true 
            || request.auth.token.role == 'admin' 
            || request.auth.token.role == 'superadmin');
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidImageSize(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }
    
    function isValidImage(maxSizeMB) {
      return isValidImageType() && isValidImageSize(maxSizeMB);
    }
    
    // Product images - publicly readable but authenticated write
    match /product_images/{allPaths=**} {
      allow read: if true;  // Public read for product browsing
      allow write: if isAuthenticated() 
        && isValidImage(10);  // Max 10MB per image
      allow delete: if isAuthenticated();
    }
    
    // Category images - publicly readable, admin-only write
    match /category_images/{allPaths=**} {
      allow read: if true;  // Public read for category browsing
      allow write: if isAdmin() 
        && isValidImage(5);  // Max 5MB per image
      allow delete: if isAdmin();
    }
    
    // Generic images folder - authenticated access only
    match /images/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
        && isValidImage(10);  // Max 10MB per image
      allow delete: if isAuthenticated();
    }
    
    // Product-specific images with owner verification
    match /products/{productId}/images/{imageName} {
      allow read: if true;  // Public read for product viewing
      allow write: if isAuthenticated() 
        && isValidImage(10);  // Max 10MB per image
      allow delete: if isAuthenticated() || isAdmin();
    }
    
    // Sticker images - publicly readable for browsing
    match /stickers/{stickerId}/{allPaths=**} {
      allow read: if true;  // Public read for sticker browsing
      allow write: if isAuthenticated() 
        && isValidImage(10);  // Max 10MB per image
      allow delete: if isAuthenticated() || isAdmin();
    }
    
    // User profile images - user-isolated
    match /users/{userId}/profile/{imageName} {
      allow read: if true;  // Public read for user profiles
      allow write: if isOwner(userId) 
        && isValidImage(5);  // Max 5MB per profile image
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // User private files - fully user-isolated
    match /users/{userId}/private/{allPaths=**} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) 
        && isValidImageSize(20);  // Max 20MB for private files
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // Design exports - user-isolated with size limit
    match /exports/{userId}/{allPaths=**} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) 
        && request.resource.size < 500 * 1024 * 1024;  // Max 500MB per export
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // Temporary uploads - short-lived, user-isolated
    match /temp/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) 
        && isValidImageSize(50);  // Max 50MB for temp files
      allow delete: if isOwner(userId);
    }
    
    // Admin uploads - admin-only access
    match /admin/{allPaths=**} {
      allow read, write, delete: if isAdmin();
    }
    
    // Default deny rule for any other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

